# =============================================================================
# MEMORA - Global Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=memora
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Full database URL (auto-constructed in production, but can be overridden)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/memora

# Database settings
DB_ECHO=false

# =============================================================================
# ELASTICSEARCH CONFIGURATION
# =============================================================================
ELASTIC_URL=http://localhost:9200
ELASTIC_API_KEY=your_elasticsearch_api_key_here
ELASTIC_INDEX_NAME=memora_content
EMBEDDING_DIMS=1536

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:8000/auth/callback
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_here_min_32_chars
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Backend URL for frontend to connect to
VITE_BACKEND_URL=http://localhost:8000

# =============================================================================
# DOCKER PORTS CONFIGURATION
# =============================================================================
# Backend API port
BACKEND_PORT=8000

# Frontend port
FRONTEND_PORT=3000

# Nginx ports (when using nginx profile)
NGINX_PORT=443
NGINX_HTTP_PORT=80

# =============================================================================
# PRODUCTION ENVIRONMENT SETTINGS
# =============================================================================
# Set to 'production' in production environment
NODE_ENV=development

# Set to 'true' in production
PRODUCTION=false

# Domain configuration for production
DOMAIN=localhost
SSL_EMAIL=your-email@domain.com

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# These settings are typically only used in development
DEV_BACKEND_URL=http://127.0.0.1:8000
DEV_FRONTEND_URL=http://127.0.0.1:3000